<h2>マイページ</h2>
<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h3>登録情報    <%= link_to '編集する',public_edit_member_path(current_member), class: 'btn btn-success' %></h3>
      <h5>氏名</h5>
      <%= @member.last_name %><%= @member.first_name %>
      <h5>カナ</h5>
      <%= @member.last_name_kana %><%= @member.first_name_kana %>
      <h5>郵便番号</h5>
      <%= @member.postcode %>
      <h5>住所</h5>
      <%= @member.address %>
      <h5>電話番号</h5>
      <%= @member.phone_number %>
      <h5>メールアドレス</h5>
      <%= @member.email %>
      <h3>配送先      <%= link_to '一覧を見る',public_deliveries_path, class: 'btn btn-primary' %></h3>
      <h3>注文履歴    <%= link_to '一覧を見る',public_orders_path, class: 'btn btn-primary' %></h3>
    </div>
  </div>
</div>