<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <%= link_to '編集する',edit_public_member_path(current_member.id),class: 'btn btn-secondary' %>
        <h2>マイページ</h2>
          <di class="col-md-3">
            <tr>
              <td>
                <h5>姓</h5>
                <%= @member.last_name %>
                <h5>名</h5>
                <%= @member.first_name %>
              </td>
              <td>
                <h5>セイ</h5>
                <%= @member.last_name_kana %>
                <h5>メイ</h5>
                <%= @member.first_name_kana %>
              </td>
              <td>
                <h5>郵便番号</h5>
                <%= @member.postcode %>
              </td>
              <td>
                <h5>住所</h5>
                <%= @member.address %>
              </td>
              <td>
                <h5>電話番号</h5>
                <%= @member.phone_number %>
              </td>
              <td>
                <h5>メールアドレス</h5>
                <%= @member.email %>
              </td>
            </tr>
          <h3>配送先</h3>
          <%= link_to '一覧を見る',public_deliveries_path,class: 'btn btn-secondary' %>
          <h3>注文履歴</h3>
          <%= link_to '一覧を見る',public_orders_path,class: 'btn btn-secondary' %>
    </div>
  </div>
</div>