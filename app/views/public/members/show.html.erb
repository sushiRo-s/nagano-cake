<h2>マイページ</h2>
<div class='container'>
  <div class='row'>
    <div class='col-lg-7'>
      <h3>登録情報    <%= link_to '編集する',public_edit_member_path(current_member), class: 'btn btn-success' %></h3>
       <table class="table table-borderless">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= @member.last_name %> <%= @member.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @member.last_name_kana %> <%= @member.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @member.postcode %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @member.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @member.phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @member.email %></td>
          </tr>
        </tbody>
      </table>
      <h6>配送先      <%= link_to '一覧を見る',public_deliveries_path, class: 'btn btn-primary' %></h6>
      <h6>注文履歴    <%= link_to '一覧を見る',public_orders_path, class: 'btn btn-primary' %></h6>
    </div>
  </div>
</div>