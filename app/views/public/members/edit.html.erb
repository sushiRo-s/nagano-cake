<h2>会員情報編集</h2>

<%= form_with model:@member, url:"/public/members", local:true do |f| %>
  <label for="inputName">Name</label>
  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.label :last_name, "姓" %>
    <%= f.text_field :last_name, autofocus: true, required: true, class: 'form-control' %>
    <%= f.label :first_name, "名" %>
    <%= f.text_field :first_name, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %><br />
    <%= f.label :last_name_kana, "セイ" %>
    <%= f.text_field :last_name_kana, autofocus: true, required: true, class: 'form-control' %>
    <%= f.label :first_name_kana, "メイ" %>
    <%= f.text_field :first_name_kana, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %><br />
    <%= f.text_field :postcode, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br />
    <%= f.text_field :phone_number, autofocus: true, required: true, class: 'form-control' %>
  </div>
  <%= f.submit "編集内容を保存", class: 'btn btn-secondary' %>
<% end %>

<%= link_to "退会する", public_unsubscribe_path %>