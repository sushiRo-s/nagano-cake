<h1>注文履歴一覧</h1>

<table class="table table-hover table-inverse">
 <thead>
  <th>注文日</th>
  <th>配送先</th>
  <th>注文商品</th>
  <th>支払金額</th>
  <th>ステータス</th>
  <th>注文詳細</th>
  <th colspan="6"></th>
  <tr>
   <% @orders.each do |order| %>
 <tr>
 <th><%= order.created_at %></th>
 <th>〒<%= order.delivery_postcode %>
       <p><%= order.delivery_address %></p>
       <p><%= order.delivery_name %></p></th>
     <th><% order.order_products.each do |order_product| %>
     <%= order_product.product.name %>
 　   <% end %></th>
 <th><%= order.total_price %></th>
 <th><% if order.status = 0 %>入金待ち
   　<% elsif order.status = 1 %>入金確認
   　<% elsif order.status = 2 %>製作中
   　<% elsif order.status = 3 %>発送準備中
   　<% elsif order.status = 4 %>発送済み
  　　<% else %>
  　　<% end %></th>
  <th><%= link_to "表示する", public_order_path(order.id), class: 'btn btn-primary' %></th>
 <% end %>

 </tr></tr>
  <thead>
 </table>
 <%= paginate @orders %>