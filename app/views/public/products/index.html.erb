<h1>商品一覧<span>（全<%= @products.count %>件）</span></h1>

<div class="container">
  <div class="row">
<% @products.each do |product| %>
<div class="col-sm-3">
  <%= link_to public_product_path(product) do %>
    <%= attachment_image_tag product, :image, class:'cake' %>
  <% end %>
<br></br>
  <%= product.name %>
<br></br>
  <span>¥</span><%= product.price %>
</div>
<% end %>


<%= paginate @products %>
   </div>
</div>