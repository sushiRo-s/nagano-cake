<h1>商品一覧<span>（全<%= @products.count %>件）</span></h1>

<% @products.each do |product| %>
<div>
  <%= link_to public_product_path(product) do %>
    <%= attachment_image_tag product, :image, :fill, 300, 300 %>
  <% end %>
  <%= product.name %>
  <span>¥</span><%= product.price %>
</div>
<% end %>


<%= paginate @products %>
