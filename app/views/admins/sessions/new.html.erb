<h2>管理者ログイン</h2>

<%= form_for(resource, as: resource_name, url: admin_session_path) do |f| %>
  <div class ="center">
  <div class ="bottom">
  <table>
  <tr>
  <div class="field">
  <th><%= f.label :メールアドレス %></th>
  <th><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-lg-12', size: "45" %></th>
  </div>
  </tr>
  <tr>
  <div class="field">
  <th><%= f.label :パスワード %></th>
  <th><%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %></th>
  </div>
  </tr>
  </table>
  <br></br>
  <div class="actions">
    <%= f.submit "ログイン", class: 'btn btn-primary' %>  
  </div>
<% end %>
</div>
</div>

