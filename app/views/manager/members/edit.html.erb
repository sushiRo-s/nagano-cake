<%= render "layouts/error", obj: @member %>

<div class="container">
  <div class="row">
    <div class="col-lg-7">
     <h2><%= @member.last_name %><%= @member.first_name %>さんの会員編集</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-7">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= form_with model:@member, url: manager_member_path(@member), local:true do |f| %>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name %>　　<%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana %>　　<%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postcode %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <label><%= f.radio_button :is_deleted, false %>有効</label>
              <label><%= f.radio_button :is_deleted, true %>退会</label>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <div style = "display:flex">
              <%= f.submit '変更を保存', class: 'btn btn-success' %></br>
              <% end %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>