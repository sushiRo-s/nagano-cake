<h2><%= @member.last_name %><%= @member.first_name %>さんの会員編集</h2>

<div>
  <%= form_with model:@member, url: manager_member_path(@member), local:true do |f| %>
  <h6>氏名</h6>
  <%= f.text_field :last_name %><%= f.text_field :first_name %>
  <h6>フリガナ</h6>
  <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
  <h6>郵便番号</h6>
  <%= f.text_field :postcode %>
  <h6>住所</h6>
  <%= f.text_field :address %>
   <h6>電話番号</h6>
  <%= f.text_field :phone_number %>
   <h6>メールアドレス</h6>
  <%= f.text_field :email %>
  <h6>会員ステータス</h6>
  <label><%= f.radio_button :is_deleted, false %>有効</label>
  <label><%= f.radio_button :is_deleted, true %>退会</label>
  <br>
  <%= f.submit '変更を保存', class: 'btn btn-success' %></br>
  <% end %>
  </div>