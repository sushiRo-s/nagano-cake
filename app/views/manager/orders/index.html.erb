<h2>注文履歴一覧</h2>

<table class="table table-hover table-inverse">
 <thead>
  <th>購入日時</th>
  <th>購入者</th>
  <th>注文個数</th>
  <th>注文ステータス</th>
  <th colspan="4"></th>
  <tr>
 <% @orders.each do |order| %>
 <tr>
 <th><%= link_to order.created_at, manager_order_path(order) %></th></th>
 <th><%= order.member.last_name %><%= order.member.first_name %></th>
 <th><%= order.order_product.quantity %></th>
 <th><% if order.status = 0 %>入金待ち
   　<% elsif order.status = 1 %>入金確認
   　<% elsif order.status = 2 %>製作中
   　<% elsif order.status = 3 %>発送準備中
   　<% elsif order.status = 4 %>発送済み
  　　<% else %>
  　　<% end %></th>
 <% end %>
 </tr></tr>
  <thead>
 </table>
 <%= paginate @orders %>