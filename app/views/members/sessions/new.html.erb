<h2>ログイン</h2>
<h5>会員の方はこちらからログイン</h5>
<%= form_for(resource, as: resource_name, url: member_session_path) do |f| %>
<div class ="center">
  <div class ="bottom">
    <table>
    <tr>
    <div class="field">
    <th><%= f.label :メールアドレス %></th>
    <th><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-lg-12', size: "45" %></th>
    </div>
    </tr>
    <tr>
    <div class="field">
    <th><%= f.label :パスワード %></th>
    <th><%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %></th>
    </div>
    <tr>
    </table>
  <!--<% if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <%= f.check_box :remember_me %>-->
  <!--    <%= f.label :remember_me %>-->
  <!--  </div>-->
  <!--<% end %>-->
  <br></br>
  <div class="actions">
  <%= f.submit "ログイン", class: 'btn btn-primary' %>
   <% end %>
   </div>
   <br></br>
<h3>会員登録がお済みでない方</h3>
<%= render "members/shared/links" %>
</div>
</div>